<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 
    <item android:state_pressed="true"> <!-- pressed -->
    	<shape>
       	 	<gradient
            	android:startColor="#058CF5"
            	android:centerColor="#0273ED"
            	android:centerY="0.75"
           		android:endColor="#015DE6"
           		android:angle="270" />
       	 <corners
			 android:radius="3dp" >
			 </corners>
    	</shape>    
	</item>
	<item >
	    <shape >
			 <!-- Set màu nền-->
			 <solid
			 android:color="@color/d_color_blue2" >
			 </solid>
			 
			 <!-- đặt thuộc tính màu và độ rộng của đường viền -->
			 <stroke
			 android:width="1dp"
			 android:color="#f58225" >
			 </stroke>
			 
			 <!-- các thuộc tính căn chỉnh-->
			 <padding
			 android:left="10dp"
			 android:top="10dp"
			 android:right="10dp"
			 android:bottom="10dp" >
			 </padding>
			 
			 <!-- và đây là bán kính đường tròn ở 4 góc -->
			 <corners
			 android:radius="3dp" >
			 </corners>
		 </shape>
	 </item>
</selector>