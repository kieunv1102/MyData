<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <GridView
        android:id="@+id/grvProductEcom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnlMenu"
        android:gravity="center"
        android:numColumns="2"
        android:verticalSpacing="5dp" >
    </GridView>

    <RelativeLayout
        android:id="@+id/rllprogressbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:visibility="visible" >

        <ProgressBar
            android:id="@+id/prb_progressbar_fragment_single2"
            style="?android:attr/progressBarStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/txtprogressbar2"
            android:layout_gravity="right|center_vertical"
            android:layout_toLeftOf="@+id/txtprogressbar2"
            android:layout_toStartOf="@+id/txtprogressbar2"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/txtprogressbar2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="120dp"
            android:layout_marginRight="240dp"
            android:gravity="center"
            android:text="Đang tải dữ liệu....."
            android:textColor="#000"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>