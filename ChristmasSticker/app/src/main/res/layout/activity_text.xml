<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llbot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#80000000"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txv_dialog_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="20dp"
        android:text="Your Style"
        android:textColor="#ffe9b5"
        android:textSize="35sp"
        android:background="#000000"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="2">


            <Button
                android:id="@+id/btnColor"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Color"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"/>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#130b09" />



            <Button
                android:id="@+id/btnApply"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="Apply" />





    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#000000">
        <EditText
            android:id="@+id/edt_dialog_text__enter_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:hint="Enter Your Text Here"
            android:maxLines="2"
            android:background="#82000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffe9b5" />
    </RelativeLayout>

    <GridView
        android:id="@+id/grvFontText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:numColumns="5"/>
</LinearLayout>
